{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,

    "allowJs": true,
    "checkJs": false,
    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "vite-electron-plugin/electron-env"
    ],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["build", "node_modules", "cypress"]
}
